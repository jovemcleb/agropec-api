{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    // "lib": [
    //   "ES2022",
    //   "DOM"
    // ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}